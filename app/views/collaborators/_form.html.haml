%table
  %tr
    %th
      Email
    %th
      Collaborator Status
  - @users = User.all
  - @users.each do |user|
    - if current_user == user
    - else
      %tr
        %td
          = user.email
        %td
          - if @wiki.users.include? user
            = link_to "Remove Collaborator", collaborator_path(wiki_id: @wiki.id, user_id: user.id), method: :delete, class: 'btn btn-danger'
          - else
            = link_to "Add Collaborator", collaborator_path(wiki_id: @wiki.id, user_id: user.id), method: :post, class: 'btn btn-success'
            
