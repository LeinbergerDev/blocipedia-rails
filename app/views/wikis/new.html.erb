<h1>New Wiki</h1>
<div class="row">
  <div class="col-md-12">
    <%= form_for [@wiki] do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter a title here" %>
      </div>
      <div class="form-goup">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: "Enter body content here" %>
      </div>
      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
          <%= f.check_box :private %>Private Wiki
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
