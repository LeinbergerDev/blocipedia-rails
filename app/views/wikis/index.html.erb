<div class="row">
  <% if current_user.role == "standard" %>
    <div class="col-md-12">
  <% else %>
    <div class="col-md-6">
  <% end %>
    <div class="center">
      <div class="row">
        <h1>Public Wikis
        <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
        </h1>
      </div>
    </div>
    <div class="row">
      <table class="center">
        <% @wikis.each do |wiki| %>
          <% if wiki.private == false %>
            <tr>
              <td>
                <%= link_to wiki.title, wiki_path(wiki) %>
              </td>
              <td>
                <%= link_to "Edit", edit_wiki_path(wiki), class: 'btn btn-success' %>
              </td>
              <td>
                <%= link_to "Delete Wiki",[wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
  <% if current_user.role == "admin" || current_user.role == "premium" %>
  <div class="col-md-6">
    <div class="center">
      <div class="row">
        <h1>Private Wikis
        <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
        </h1>
      </div>
    </div>
    <div class="row">
      <table class="center">
        <% @wikis.each do |wiki| %>
          <% if current_user.id == wiki.user_id && wiki.private == true %>
          <tr>
            <td>
              <%= link_to wiki.title, wiki_path(wiki) %>
            </td>
            <td>
              <%= link_to "Edit", edit_wiki_path(wiki), class: 'btn btn-success' %>
            </td>
            <td>
              <%= link_to "Delete Wiki",[wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
            </td>
          </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
  <% end %>
</div>
